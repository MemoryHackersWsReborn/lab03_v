@{
    ViewBag.Title = "Додади пациент";
}

<h2>Додади пациент</h2>

@using (Html.BeginForm("AddPatient", "Doctors", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.Hidden("doctorId", (int)ViewBag.DoctorId)

    <div class="form-group">
        <label>Доктор:</label>
        <input type="text" class="form-control" value="@ViewBag.DoctorId" disabled />
    </div>

    <div class="form-group">
        <label>Избери пациент</label>
        @Html.DropDownList("patientId", (SelectList)ViewBag.PatientId, "-- Избери пациент --", new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Додади</button>
}
