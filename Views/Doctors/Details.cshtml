@model lab03_v.Models.Doctor

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Doctor</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Hospital.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Hospital.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>

    <h4>Пациенти</h4>
    @if (Model.Patients != null && Model.Patients.Any())
    {
        <ul>
            @foreach (var patient in Model.Patients)
            {
                <li>
                    @Html.ActionLink(patient.Name, "Details", "Patients", new { id = patient.Id }, null)
                </li>
            }
        </ul>
    }
    else
    {
        <p>No patients assigned to this doctor.</p>
    }
</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index") |
    @Html.ActionLink("Add Patient", "AddPatient", new { id = Model.Id })
</p>
